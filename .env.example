# Application Environment Variables

# Claude API (Required for LLM analysis)
ANTHROPIC_API_KEY=your_claude_api_key_here

# OpenAI (Optional - alternative to Claude)
OPENAI_API_KEY=your_openai_key_here

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/docdb

# Redis Cache
REDIS_URL=redis://localhost:6379

# AWS S3 Storage (Optional - for image storage)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=your_bucket_name
AWS_REGION=us-east-1

# DeepL Translation API (Optional - for translation quality comparison)
DEEPL_API_KEY=your_deepl_key_here

# JWT Secret for Authentication
JWT_SECRET=your_random_jwt_secret_here

# Application Settings
DEBUG=false
LOG_LEVEL=info
MAX_IMAGE_SIZE_MB=10
TEMP_FILE_RETENTION_HOURS=24

# ===========================================
# MCP Server Environment Variables
# ===========================================

# GitHub MCP Server
# Generate token at: https://github.com/settings/tokens
# Required scopes: repo, workflow, read:user
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_github_token_here

# PostgreSQL MCP Server (uses same DATABASE_URL as above)
# This allows Claude Code to query and manage your database

# Note: The filesystem MCP server uses a hardcoded path in .mcp.json
# No environment variable needed for filesystem access
